<Page
    x:Class="Pong.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pong"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="0" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="600" Width="400">
            <StackPanel.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/field-football-pitch-soccer-green-playground.png"/>
            </StackPanel.Background>
            <TextBlock  Text="Willkommen" FontSize="40" Foreground="Black" HorizontalAlignment="Center"/>
            <Button x:Name="_1_gegen_1" Content="1 vs 1" Width="200" Height="50" Click="StartGame_Clicked" HorizontalAlignment="Center" Margin="0,100,0,0" Foreground="Black"/>
            <Button x:Name="Optionen" Content="1 vs Computer" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="200" Height="50" Foreground="Black" Click="Options_Clicked" Margin="100,0"/>
            <Button x:Name="Challenge" Content="Instructions" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="200" Height="50" Foreground="Black" Click="start_Instructions"/>

        </StackPanel>

    </Grid>
</Page>
