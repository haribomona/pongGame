<Page
    x:Class="Pong.GameScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pong"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  >

    <Grid x:ConnectionId='1' Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                                  >
        <Canvas x:Name="gameField" HorizontalAlignment="Center" Height="500"  VerticalAlignment="Center" Width="700">
            <Canvas.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/field-football-pitch-soccer-green-playground.png"/>
            </Canvas.Background>
            <Button x:ConnectionId='2' Content="Modus Selection" Height="40" Width="150"                                   Canvas.Left="445" Canvas.Top="528"/>
            <Button x:ConnectionId='3' x:Name="StartGame_Button" Content="Start Game" HorizontalAlignment="Center" VerticalAlignment="Center"                   Canvas.Left="134" Canvas.Top="528"/>


            <Button x:ConnectionId='4' x:Name="POne_down" Content="Down" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="755" Canvas.Top="316"                                                                                        />
            <Button x:ConnectionId='5' x:Name="PTwo_up" Content="Up" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="-126" Canvas.Top="153"                                                                                    />
            <Button x:ConnectionId='6' x:Name="PTwo_down" Content="Down" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="-135" Canvas.Top="316"                                                                                        />
            <Button x:ConnectionId='7' x:Name="POne_up" Content="Up" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="764" Canvas.Top="153" RenderTransformOrigin="0.259,0.553"                                                                                    />

            <TextBlock x:Name="PlayerTwo_Counter" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Style="{StaticResource SubtitleTextBlockStyle}" Width="60" TextAlignment="Center" Canvas.Left="281" Canvas.Top="-32"/>
            <TextBlock x:Name="PlayerOne_Counter" HorizontalAlignment="Left" Margin="0" TextWrapping="Wrap" Height="30" VerticalAlignment="Top" Style="{StaticResource SubtitleTextBlockStyle}" Width="60" TextAlignment="Center" Canvas.Left="355" Canvas.Top="-32"/>
        </Canvas>



        <StackPanel Width="120" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,80,0,0" Orientation="Horizontal">
            
        </StackPanel>


    </Grid>
</Page>

