<Page
    x:Class="Pong.GameScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pong"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='0' Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                                  >
        <Canvas x:Name="gameField" HorizontalAlignment="Center" Height="500"  VerticalAlignment="Center" Width="700">
            <Canvas.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/field-football-pitch-soccer-green-playground.png"/>
            </Canvas.Background>

        </Canvas>

        <Button Content="Button" HorizontalAlignment="Left" Margin="739,649,0,0" VerticalAlignment="Top" Opacity="0"/>
        <TextBox x:Name="PlayerOne_Counter" HorizontalAlignment="Center" Margin="0,180,200,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="30"/>
        <TextBox x:Name="PlayerTwo_Counter" HorizontalAlignment="Center" Margin="200,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" Height="30"/>

    </Grid>
</Page>

