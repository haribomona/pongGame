<Page
    x:Class="Pong.Instruction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pong"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="0" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="600" Width="400">
            <StackPanel.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/field-football-pitch-soccer-green-playground.png"/>
            </StackPanel.Background>
            <TextBlock  Text="Instructions" FontSize="40" Foreground="Black" HorizontalAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" Height="371" FontSize="20" Margin="100,50,100,0" Foreground="#FF0C0000">
            	<Run Text="1 vs 1 : "/>
            	<Run Text="          "/>
            	<Run Text="PlayerOne"/>
            	<Run Text=" "/>
            	<Run Text="=Up/Down Player 2 = "/>
            	<Run Text="W/S "/>
            	<Run Text="            Win against each other with 3 points difference                  "/>
            	<Run Text=" 1 vs Computer: "/>
            	<Run Text="    Player = Up/Down  Choose your level of difficulty; win against computer with 2 points difference in 3 levels"/>
            </TextBlock>
            <Button x:ConnectionId='1' x:Name="Back_Button" Content="Back" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="200" Height="50"              Foreground="Black" Margin="100,0" />

        </StackPanel>

    </Grid>
</Page>

