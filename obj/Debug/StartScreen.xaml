<Page
    x:Class="Pong.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pong"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="0" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="600" Width="400">
            <StackPanel.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/Sport-Activities-Ping-pong-icon.png"/>
            </StackPanel.Background>
            <TextBox x:Name="WillkommenBox" TextWrapping="Wrap" Text="Willkommen"  Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Width="176" Padding="0" UseLayoutRounding="False" MinWidth="100" MinHeight="30" HorizontalContentAlignment="Left" Foreground="White" FontSize="30">
                <TextBox.Background>
                    <ImageBrush Stretch="Fill"/>
                </TextBox.Background>
            </TextBox>
            <Button x:ConnectionId='1' x:Name="_1_gegen_1" Content="1 vs 1" Width="200" Height="50"                           HorizontalAlignment="Center" Margin="0,100,0,0"/>
            <Button x:Name="_1_gegen_Computer" Content="1 vs Computer" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="200" Height="50"/>
            <Button x:Name="Challenge" Content="Challenge" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="200" Height="50"/>
            <Button x:Name="Optionen" Content="Optionen" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="200" Height="50"/>

        </StackPanel>

    </Grid>
</Page>

